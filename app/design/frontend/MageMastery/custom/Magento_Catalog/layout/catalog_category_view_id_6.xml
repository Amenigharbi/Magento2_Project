<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    

    <body>
        <!-- Remove Compare Products -->
        <referenceBlock name="catalog.compare.sidebar" remove="true" />

        <!-- Remove Recently Ordered -->
        <referenceBlock name="sale.reorder.sidebar" remove="true" />

        <!-- Remove My Wishlist -->
        <referenceBlock name="wishlist_sidebar" remove="true" />

        <!-- Remove the "We can't find products matching the selection." message -->
        <referenceBlock name="category.products.list" remove="true" />

       <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="custom_block" template="Magento_Catalog::custom_block.phtml" before="-">
                <arguments>
                    <argument name="css_class" xsi:type="string">custom-block</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
