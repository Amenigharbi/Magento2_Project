<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/source/_custom_signin.css"/> 
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="title" xsi:type="string">Custom Sign In Title</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="form.login">
            <arguments>
                <argument name="template" xsi:type="string">Magento_Customer::form/login.phtml</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
