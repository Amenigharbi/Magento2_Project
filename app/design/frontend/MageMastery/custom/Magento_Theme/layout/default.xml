<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Include the custom CSS file -->
        <css src="css/styles-l.css"/>
        <css src="css/custom.css"/>
    </head>

    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/makali.png</argument>
                <argument name="logo_height" xsi:type="string">62</argument>
                <argument name="logo_width" xsi:type="string">100</argument>
            </arguments>
        </referenceBlock>
        
       
         <referenceContainer name="page.top">
            <block class="Vendor\MegaMenu\Block\Topmenu" name="mega_menu" template="Vendor_MegaMenu::topmenu.phtml"/>
        </referenceContainer>
        
        <!-- Remove unnecessary blocks -->

       

    </body>
</page>
