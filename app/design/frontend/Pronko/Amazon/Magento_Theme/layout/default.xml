<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Assurez-vous que le CSS personnalisé est inclus -->
        <css src="css/source/_custom-footer.less" />
    </head>
    <body>
        <!-- Configuration du logo -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/makali.png</argument>
                <argument name="logo_img_width" xsi:type="number">111</argument>
                <argument name="logo_img_height" xsi:type="number">36</argument>
            </arguments>
        </referenceBlock>

        <!-- Configuration du bloc de contenu -->
        <referenceBlock name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="pronko.amazon.content.container"
                   template="Pronko_AmazonTheme::content.phtml" />
        </referenceBlock>

        <!-- Suppression des blocs par défaut -->
        <referenceBlock name="advanced-search-link" remove="true" />
        <referenceBlock name="form.subscribe" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />

        <!-- Configuration du footer personnalisé -->
        <referenceContainer name="footer-container">
            <block class="Magento\Framework\View\Element\Template"
                   name="custom.footer"
                   template="Magento_Theme::html/footer.phtml"
                   before="-"/>
        </referenceContainer>

        <!-- Suppression des liens de footer par défaut -->
        <referenceBlock name="footer_links" remove="true" />

        <!-- Configuration du header -->
        <referenceContainer name="header-wrapper">
            <!-- Conteneur pour le contenu additionnel du header -->
        </referenceContainer>

        <referenceContainer name="header.container">
            <container name="pronko_amazon_header_after_container"
                       label="Amazon Header After Container"
                       htmlTag="div"
                       htmlClass="header-after"
                       after="header-wrapper">
                <block class="Magento\Framework\View\Element\Template"
                       name="pronko.amazon.header.additional.content"
                       template="Pronko_AmazonTheme::header/content.phtml"
                       after="logo"/>
            </container>
        </referenceContainer>

        <!-- Suppression du wrapper du header -->
        <referenceContainer name="header.panel.wrapper" remove="true" />

        <!-- Déplacement de l'élément de recherche dans le header -->
        <move element="top.search" destination="header-wrapper" after="logo" />
    </body>
</page>
