<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="directory_city_postal_codes" resource="default" engine="innodb" comment="City Postal Codes Mapping">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="region_id" unsigned="true" nullable="false" comment="Region ID"/>
        <column xsi:type="varchar" name="postal_code" nullable="false" length="10" comment="Postal Code"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="DIRECTORY_CITY_POSTAL_CODES_REGION_ID" 
            table="directory_city_postal_codes" 
            column="region_id" 
            referenceTable="directory_country_region" 
            referenceColumn="region_id"/>
        
        <index referenceId="CITY_POSTAL_CODE_REGION_IDX">
            <column name="region_id"/>
        </index>
    </table>

</schema>
